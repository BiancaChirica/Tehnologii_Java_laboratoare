<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">
    <servlet>
        <servlet-name>FrontController</servlet-name>
        <servlet-class>FrontController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>FrontController</servlet-name>
        <url-pattern>/</url-pattern>
        <url-pattern>/FrontController</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>FlowController</servlet-name>
        <servlet-class>FlowController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>FlowController</servlet-name>
        <url-pattern>/FlowController</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>CAPTCHAService</servlet-name>
        <servlet-class>CAPTCHAService</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>CAPTCHAService</servlet-name>
        <url-pattern>/captcha</url-pattern>
    </servlet-mapping>
</web-app>